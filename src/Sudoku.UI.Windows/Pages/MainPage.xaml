<Page
	x:Class="Sudoku.UI.Windows.Pages.MainPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:dc="using:Sudoku.UI.Windows.DataContexts"
	xmlns:c="using:Sudoku.UI.Windows.Controls"
	d:DataContext="{d:DesignInstance Type=dc:MainPageDataContext}"
	mc:Ignorable="d"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.DataContext>
		<dc:MainPageDataContext />
	</Page.DataContext>

	<Grid>
		<c:SudokuGridPane x:Name="_SudokuGridPane" />
	</Grid>
</Page>
