<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<LangVersion>9.0</LangVersion>
		<DefineConstants>SUDOKU_RECOGNITION</DefineConstants>
		<Authors>Sunnie</Authors>
		<Description>This project encapsulates the operations about recognitions of a sudoku picture.</Description>
		<Copyright>Copyright (c) Sunnie 2019-2021</Copyright>
		<PackageId>Sudoku.Recognition</PackageId>
		<Product>Sudoku.Recognition</Product>
		<DocumentationFile>..\docxml\Sudoku.Recognition.xml</DocumentationFile>
		<Version>0.7</Version>
		<Nullable>enable</Nullable>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>DEBUG; SUDOKU_RECOGNITION; SOLUTION_WIDE_CODE_ANALYSIS</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
		<DefineConstants>SUDOKU_RECOGNITION; SOLUTION_WIDE_CODE_ANALYSIS</DefineConstants>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Emgu.CV" Version="4.4.0.4099" />
		<PackageReference Include="Emgu.CV.runtime.windows" Version="4.4.0.4099" />
		<PackageReference Include="System.Drawing.Common" Version="5.0.2" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Sudoku.Core\Sudoku.Core.csproj" />
		<ProjectReference Include="..\Sudoku.Drawing\Sudoku.Drawing.csproj" />
		<ProjectReference Include="..\Sudoku.CodeGenerating\Sudoku.CodeGenerating.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" />
	</ItemGroup>

</Project>
