<Page
	x:Class="SudokuStudio.Views.Pages.SettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:m="using:SudokuStudio.Markup"
	xmlns:p="using:SudokuStudio.Views.Pages"
	xmlns:ps="using:SudokuStudio.Views.Pages.Settings"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=p:SettingsPage}">
	<StackPanel Margin="{m:Thickness Base={StaticResource NavigationViewHeaderMargin},Top=10,Right=56}" Spacing="20">
		<TextBlock Text="{m:R Key=SettingsPage_Intro}" Margin="0,10,0,0" />
		<Pivot Margin="-10,0,20,20">
			<PivotItem Header="{m:R Key=SettingsPage_Basic}">
				<ps:BasicPreferenceItemsPage Margin="0,20" />
			</PivotItem>
			<PivotItem Header="{m:R Key=SettingsPage_Drawing}">
				<ps:DrawingPreferenceItemsPage Margin="0,20" />
			</PivotItem>
		</Pivot>
	</StackPanel>
</Page>
