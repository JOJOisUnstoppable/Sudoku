<UserControl
	x:Class="SudokuStudio.Views.Controls.SudokuPaneCell"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:c="using:SudokuStudio.Views.Controls"
	xmlns:cvt="using:SudokuStudio.Views.Conversions"
	d:DataContext="{d:DesignInstance Type=c:SudokuPaneCell}"
	mc:Ignorable="d"
	PointerEntered="UserControl_PointerEntered" PointerExited="UserControl_PointerExited">
	<UserControl.Resources>
		<Style x:Key="TextBlockStyle" TargetType="TextBlock">
			<Setter Property="HorizontalAlignment" Value="Stretch" />
			<Setter Property="VerticalAlignment" Value="Stretch" />
			<Setter Property="HorizontalTextAlignment" Value="Center" />
			<Setter Property="TextAlignment" Value="Center" />
		</Style>
	</UserControl.Resources>

	<Grid x:Name="MainGrid" RowDefinitions="*,*,*" ColumnDefinitions="*,*,*">
		<!--Values-->
		<TextBlock
			Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.ValueFont,Mode=OneWay}"
			Text="{x:Bind cvt:ValueTextConversion.GetText(CellStatus,CandidatesMask),Mode=OneWay}"
			Foreground="{x:Bind cvt:ValueTextConversion.GetValueFontColor(BasePane.Puzzle,CellIndex,BasePane.ModifiableColor,BasePane.GivenColor),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.ValueFontScale),Mode=OneWay}"
			Visibility="{x:Bind cvt:VisibilityConversion.CellStatusToValueTextBlockVisibility(CellStatus),Mode=OneWay}" />

		<!--Candidates-->
		<TextBlock
			Grid.Row="0" Grid.Column="0" Text="1" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,0),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="0" Grid.Column="1" Text="2" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,1),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="0" Grid.Column="2" Text="3" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,2),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="1" Grid.Column="0" Text="4" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,3),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="1" Grid.Column="1" Text="5" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,4),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="1" Grid.Column="2" Text="6" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,5),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="2" Grid.Column="0" Text="7" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,6),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="2" Grid.Column="1" Text="8" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,7),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
		<TextBlock
			Grid.Row="2" Grid.Column="2" Text="9" Style="{StaticResource TextBlockStyle}"
			FontFamily="{x:Bind BasePane.PencilmarkFont,Mode=OneWay}"
			Foreground="{x:Bind cvt:PencilmarkTextConversion.GetBrush(BasePane.PencilmarkColor,CellStatus,CandidatesMask,8),Mode=OneWay}"
			FontSize="{x:Bind cvt:PencilmarkTextConversion.GetFontSize(BasePane.ApproximateCellWidth,BasePane.PencilmarkFontScale),Mode=OneWay}"
			PointerEntered="TextBlock_PointerEntered" PointerExited="TextBlock_PointerExited" DoubleTapped="TextBlock_DoubleTapped" />
	</Grid>
</UserControl>
