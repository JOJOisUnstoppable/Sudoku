<UserControl
	x:Class="SudokuStudio.Views.Controls.FontPicker"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:c="using:SudokuStudio.Views.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:cvt="using:SudokuStudio.Interaction.Conversions"
	mc:Ignorable="d" d:DataContext="{d:DesignInstance Type=c:FontPicker}">
	<StackPanel Spacing="10">
		<ComboBox
			x:Name="ComboBox" ItemsSource="{x:Bind cvt:SettingsPageConversion.GetFontNames()}" Header="{x:Bind Header,Mode=TwoWay}"
			SelectedValuePath="Text" SelectedValue="{x:Bind SelectedFontName,Mode=TwoWay}"
			PlaceholderText="{x:Bind PlaceholderText,Mode=TwoWay}" />
		<Slider
			x:Name="Slider" TickPlacement="Outside" Width="450" Minimum="0" Maximum="1"
			TickFrequency="0.05" StepFrequency="0.05" HorizontalAlignment="Left" VerticalAlignment="Center"
			Value="{x:Bind SelectedFontScale,Mode=TwoWay}" />
		<c:ColorSelector x:Name="ColorSelector" SelectedColor="{x:Bind SelectedColor,Mode=TwoWay}" />
	</StackPanel>
</UserControl>
