<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:layer="clr-namespace:Sudoku.UI.Layers"
	x:Class="Sudoku.UI.Pages.MainPage"
	Title="Project Nano (Sunnie's Sudoku Solution)"
	BackgroundColor="{DynamicResource SecondaryColor}">

	<GridLayout RowDefinitions="*" ColumnDefinitions="{OnIdiom Phone='*',Default='540,*'}">
		<GridLayout.Resources>
			<layer:GridOutlineLayer x:Key="GridOutlineLayer" Offset="10" />
		</GridLayout.Resources>

		<GraphicsView Drawable="{StaticResource GridOutlineLayer}" WidthRequest="540" HeightRequest="540" />
	</GridLayout>
</ContentPage>
