<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0-windows10.0.19041</TargetFrameworks>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<OutputType>WinExe</OutputType>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<RootNamespace>Sudoku.UI</RootNamespace>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<DefineConstants>NULLABLE</DefineConstants>
		<Nullable>enable</Nullable>

		<!-- Required - Enable Single Project for WinUI -->
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<WindowsPackageType>MSIX</WindowsPackageType>
		<VersionPrefix>0.1.0</VersionPrefix>

		<Authors>Sunnie</Authors>
		<Description>A project that sync'd from 'Sudoku.UI' as the WinUI implementation.</Description>
		<RepositoryUrl>https://github.com/SunnieShine/Sudoku</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>sudoku;puzzle-solving;algorithms</PackageTags>
		<Copyright>Copyright (c) Sunnie 2021</Copyright>
		<ApplicationIcon>..\..\Sudoku.UI\icon-64.ico</ApplicationIcon>
	</PropertyGroup>

	<!-- Project references -->
	<ItemGroup>
		<ProjectReference Include="..\..\System\SystemExtensions.csproj" />
	</ItemGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiImage Include="..\Sudoku.UI\Resources\appicon.svg" Link="Resources\appicon.svg" ForegroundFile="..\Sudoku.UI\Resources\appiconfg.svg" IsAppIcon="true" Color="#512BD4" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="..\Sudoku.UI\Resources\appiconfg.svg" Link="Resources\appiconfg.svg" Color="#512BD4" />

		<!-- Images -->
		<MauiImage Include="..\Sudoku.UI\Resources\Images\*" Link="Resources\Images\%(Filename)%(Extension)" />

		<!-- Custom Fonts -->
		<MauiFont Include="..\Sudoku.UI\Resources\Fonts\*" Link="Resources\Fonts\%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\Sudoku.UI\**\*.cs" Exclude="..\Sudoku.UI\bin\**;..\Sudoku.UI\obj\**;..\Sudoku.UI\Platforms\**" Link="%(RecursiveDir)%(Filename)%(Extension)" />
		<MauiXaml Include="..\Sudoku.UI\**\*.xaml" Exclude="..\Sudoku.UI\bin\**;..\Sudoku.UI\obj\**" Link="%(RecursiveDir)%(FileName)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.ProjectReunion" Version="0.8.1" />
		<PackageReference Include="Microsoft.ProjectReunion.Foundation" Version="0.8.1" />
		<PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.8.1" />
		<PackageReference Include="Microsoft.ProjectReunion.InteractiveExperiences" Version="0.8.1" NoWarn="NU1701" />
	</ItemGroup>

</Project>
