<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFrameworks>net6.0-android;net6.0-ios;net6.0-maccatalyst</TargetFrameworks>
		<TargetFrameworks Condition="$([MSBuild]::IsOSPlatform('windows')) and '$(MSBuildRuntimeType)' == 'Full'">$(TargetFrameworks);net6.0-windows10.0.19041</TargetFrameworks>
		<OutputType>Exe</OutputType>
		<RootNamespace>Sudoku.UI</RootNamespace>
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<EnablePreviewMsixTooling>true</EnablePreviewMsixTooling>
		<DocumentationFile>..\docxml\Sudoku.UI.xml</DocumentationFile>
		<NoWarn>NU1703;IDE0079</NoWarn>
		<Description>The MAUI project that displays for sudoku.</Description>
		<PackageReadmeFile>..\..\README.md</PackageReadmeFile>
		<PackageLicenseFile>..\..\LICENSE</PackageLicenseFile>
		<PackageProjectUrl>https://github.com/SunnieShine/Sudoku</PackageProjectUrl>
		<RepositoryUrl>https://github.com/SunnieShine/Sudoku</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<PackageTags>sudoku;algorithms;maui</PackageTags>

		<!-- Display name -->
		<ApplicationTitle>Sudoku.UI</ApplicationTitle>

		<!-- App Identifier -->
		<ApplicationId>com.companyname.sudoku.ui</ApplicationId>

		<!-- Versions -->
		<ApplicationVersion>1</ApplicationVersion>

		<!-- Required for C# Hot Reload -->
		<UseInterpreter Condition="'$(Configuration)' == 'Debug'">True</UseInterpreter>

		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-ios'">14.2</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-maccatalyst'">14.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="'$(TargetFramework)' == 'net6.0-android'">21.0</SupportedOSPlatformVersion>
		<SupportedOSPlatformVersion Condition="$(TargetFramework.Contains('-windows'))">10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion Condition="$(TargetFramework.Contains('-windows'))">10.0.17763.0</TargetPlatformMinVersion>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\Icons\appicon.svg" IsAppIcon="true" />

		<!-- Splash Screen -->
		<!--
		<MauiSplashScreen Include="Resources\Icons\appicon.svg" />
		-->

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />
	</ItemGroup>

	<ItemGroup Condition="$(TargetFramework.Contains('-windows'))">
		<!-- Required - WinUI does not yet have buildTransitive for everything -->
		<PackageReference Include="Microsoft.WindowsAppSDK" Version="1.0.0" />
		<PackageReference Include="Microsoft.Graphics.Win2D" Version="1.0.0.30" />
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net6.0-windows10.0.19041'">
		<PackageReference Include="Microsoft.Maui.Graphics.Win2D.WinUI.Desktop">
			<Version>6.0.200-preview.12.852</Version>
		</PackageReference>
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\Images\tab_settings.svg" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.Maui.Graphics" Version="6.0.200-preview.12.852" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="PInvoke.User32" Version="0.7.104" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\Sudoku.Core\Sudoku.Core.csproj" />
		<ProjectReference Include="..\Sudoku.Graphics\Sudoku.Graphics.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Controls\GridPane.xaml.cs">
			<DependentUpon>GridPane.xaml</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<MauiXaml Update="Controls\GridPane.xaml">
			<Generator>MSBuild:Compile</Generator>
		</MauiXaml>
		<MauiXaml Update="Pages\SettingsPage.xaml">
		  <Generator>MSBuild:Compile</Generator>
		</MauiXaml>
	</ItemGroup>

	<PropertyGroup Condition="$(TargetFramework.Contains('-windows'))">
		<OutputType>WinExe</OutputType>
		<RuntimeIdentifier>win10-x64</RuntimeIdentifier>
	</PropertyGroup>

</Project>
