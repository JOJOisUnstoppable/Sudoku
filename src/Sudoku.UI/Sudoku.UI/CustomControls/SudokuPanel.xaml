<UserControl
	x:Class="Sudoku.UI.CustomControls.SudokuPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	xmlns:interactions="using:Sudoku.UI.Interactions">
	<UserControl.DataContext>
		<interactions:SudokuPanelDataContext />
	</UserControl.DataContext>

	<StackPanel Padding="{StaticResource StackPanelDefaultPadding}">
		<Grid>
			<Grid.Resources>
				<Style x:Key="ImageStyle" TargetType="Image">
					<Setter Property="Width" Value="540" />
					<Setter Property="Height" Value="540" />
					<Setter Property="Margin" Value="5, 5, 5, 5" />
				</Style>
			</Grid.Resources>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Image x:Name="Image" Grid.Column="0" Style="{ThemeResource ImageStyle}" />
			<!--
			<Pivot x:Name="Pivot" Grid.Column="1">
				<PivotItem Header="{StaticResource MainWindow_PivotItem_Summary}">
				</PivotItem>
				<PivotItem Header="{StaticResource MainWindow_PivotItem_SolvingPath}">
				</PivotItem>
				<PivotItem Header="{StaticResource MainWindow_PivotItem_PossibleStepsGathering}">
				</PivotItem>
				<PivotItem Header="{StaticResource MainWindow_PivotItem_CustomDrawing}">
				</PivotItem>
			</Pivot>
			-->
		</Grid>
	</StackPanel>
</UserControl>
