<UserControl
	x:Class="Sudoku.UI.CustomControls.SudokuPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:q="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="q"
	xmlns:i="using:Sudoku.UI.Interactions">
	<UserControl.DataContext>
		<i:SudokuPanelDataContext />
	</UserControl.DataContext>

	<Grid
		x:Name="MainSudokuGrid" Margin="30, 30, 0, 25"
		Width="{StaticResource SudokuGridDefaultWidthAndHeight}"
		Height="{StaticResource SudokuGridDefaultWidthAndHeight}"
		HorizontalAlignment="Center" VerticalAlignment="Center">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>

		<!--Block border lines-->
		<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 3, 0, 0" BorderBrush="White" />
		<Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 3, 0, 0" BorderBrush="White" />
		<Border Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 3, 0, 0" BorderBrush="White" />
		<Border Grid.Row="26" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 0, 0, 3" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="27" BorderThickness="3, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="9" Grid.RowSpan="27" BorderThickness="3, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="18" Grid.RowSpan="27" BorderThickness="3, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="26" Grid.RowSpan="27" BorderThickness="0, 0, 3, 0" BorderBrush="White" />

		<!--Cell border lines-->
		<Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="12" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="15" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="18" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="21" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="24" Grid.Column="0" Grid.ColumnSpan="27" BorderThickness="0, 1, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="3" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="6" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="9" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="12" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="15" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="18" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="21" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
		<Border Grid.Row="0" Grid.Column="24" Grid.RowSpan="27" BorderThickness="1, 0, 0, 0" BorderBrush="White" />
	</Grid>
</UserControl>
