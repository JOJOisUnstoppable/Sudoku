<Window
	x:Class="Sudoku.UI.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:q="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="q">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition />
		</Grid.RowDefinitions>

		<!--Title bar-->
		<Grid x:Name="CustomTitleBar" x:FieldModifier="Internal">
			<Grid.ColumnDefinitions>
				<!--Title text block-->
				<ColumnDefinition />
				<!--Minimize, Maximize and close buttons-->
				<ColumnDefinition Width="{StaticResource TitleBarButtonsWidth}" />
			</Grid.ColumnDefinitions>

			<!--Title text block content-->
			<Grid
				Background="Transparent" Height="{StaticResource TitleBarHeight}"
				HorizontalAlignment="Stretch" VerticalAlignment="Top">
				<TextBlock
					Text="{StaticResource MainWindowTitle}" Style="{ThemeResource CaptionTextBlockStyle}"
					HorizontalAlignment="Center" VerticalAlignment="Center" />
			</Grid>
		</Grid>

		<!--Menu-->
		<NavigationView
			Grid.Row="1" x:Name="NavigationView_Main" PaneDisplayMode="Left" IsSettingsVisible="True"
			IsBackEnabled="False" IsBackButtonVisible="Collapsed"
			PaneTitle="{StaticResource MainWindow_NavigationView_Title}"
			ItemInvoked="NavigationView_Main_ItemInvoked">
			<NavigationView.MenuItems>
				<NavigationViewItem
					x:Name="NavigationViewItem_SudokuPanel" Icon="Edit" CacheMode="BitmapCache"
					Content="{StaticResource MainWindow_NavigationViewItem_Content_SudokuPanel}"
					Tag="{StaticResource MainWindow_NavigationViewItem_Tag_SudokuPanel}" />
				<NavigationViewItemSeparator />
				<NavigationViewItem
					x:Name="NavigationViewItem_About" Icon="Account"
					Content="{StaticResource MainWindow_NavigationViewItem_Content_About}"
					Tag="{StaticResource MainWindow_NavigationViewItem_Tag_About}" />
			</NavigationView.MenuItems>
			<Frame x:Name="Frame_NavigationView_Main" />
		</NavigationView>
	</Grid>
</Window>
