<Page
	x:Class="Sudoku.UI.Pages.MainWindow.SettingsPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:q="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="q"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.Resources>
		<Style x:Key="LongTextBlock" TargetType="TextBlock">
			<Setter Property="TextWrapping" Value="Wrap" />
			<Setter Property="Margin" Value="{StaticResource NormalThickness}" />
		</Style>
	</Page.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<!--Settings-->
		<ScrollViewer Grid.Row="0" Style="{ThemeResource ScrollViewerDefaults}">
			<StackPanel Padding="{StaticResource StackPanelDefaultPadding}">
				<TextBlock Text="{StaticResource SettingsPage_Intro}" Style="{ThemeResource LongTextBlock}" />
				<TextBlock
					Style="{ThemeResource TitleTextBlockStyle}" Margin="{StaticResource DoubleThickness}"
					Text="{StaticResource SettingsPage_SearchTitle}" />
				<TextBlock Text="{StaticResource SettingsPage_SearchIntro}" Style="{ThemeResource LongTextBlock}" />
				<AutoSuggestBox Margin="{StaticResource NormalThickness}" />

				<!--Basic options-->
				<!--Technique details-->
				<!--Technique options-->
				<!--Color palette-->
			</StackPanel>
		</ScrollViewer>

		<!--Buttons-->
		<Border Grid.Row="1" BorderBrush="White" BorderThickness="0, 1, 0, 0" />
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
			<Button Margin="40, 40, 40, 40" x:Name="Button_Save" Content="{StaticResource SettingsPage_Save}" />
		</StackPanel>
	</Grid>
</Page>
