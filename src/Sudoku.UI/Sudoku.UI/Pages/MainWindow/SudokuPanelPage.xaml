<Page
	x:Class="Sudoku.UI.Pages.MainWindow.SudokuPanelPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
	xmlns:interactions="using:Sudoku.UI.Interactions"
	xmlns:c="using:Sudoku.UI.CustomControls"
	Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
	<Page.DataContext>
		<interactions:SudokuPanelPageDataContext />
	</Page.DataContext>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition />
		</Grid.RowDefinitions>

		<c:SudokuPanel x:Name="SudokuPanel_Main" Grid.Row="0" />
		<TextBox
			x:Name="TextBox_Info" Grid.Row="1" IsReadOnly="True" Height="100"
			PlaceholderText="{StaticResource SudokuPage_TextBox_Info_PlaceholderText}" />
	</Grid>
</Page>
