<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<LangVersion>preview</LangVersion>
		<Nullable>enable</Nullable>
		<TargetFramework>net6.0-windows10.0.19041.0</TargetFramework>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>
		<RootNamespace>Sudoku.UI</RootNamespace>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<Platforms>x86;x64;arm64</Platforms>
		<RuntimeIdentifiers>win10-x86;win10-x64;win10-arm64</RuntimeIdentifiers>
		<UseWinUI>true</UseWinUI>
		<LangVersion>preview</LangVersion>
		<DefineConstants>DISABLE_XAML_GENERATED_BREAK_ON_UNHANDLED_EXCEPTION</DefineConstants>
		<AllowUnsafeBlocks>True</AllowUnsafeBlocks>
		<EnablePreviewFeatures>true</EnablePreviewFeatures>
		<GenerateRequiresPreviewFeaturesAttribute>true</GenerateRequiresPreviewFeaturesAttribute>
		<DocumentationFile>..\..\docxml\Sudoku.UI.xml</DocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<None Remove="CustomControls\SudokuPanel.xaml" />
		<None Remove="Pages\MainWindow\AboutPage.xaml" />
		<None Remove="Pages\MainWindow\SettingsPage.xaml" />
		<None Remove="Pages\MainWindow\SudokuPanelPage.xaml" />
		<None Remove="Resources\Dic_1033.xaml" />
		<None Remove="Resources\Dic_2052.xaml" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.ProjectReunion" Version="0.8.3" />
		<PackageReference Include="Microsoft.ProjectReunion.Foundation" Version="0.8.3" />
		<PackageReference Include="Microsoft.ProjectReunion.WinUI" Version="0.8.3" />
		<Manifest Include="$(ApplicationManifest)" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\Sudoku.UI.Drawing\Sudoku.UI.Drawing.csproj" />
		<ProjectReference Include="..\..\System\SystemExtensions.csproj" />
	</ItemGroup>

	<!--Load external files. The file doesn't exist in the solution, but in the logical folder.-->
	<!--Loading start-->
	<ItemGroup>
		<Compile Remove="Resources\UiResources.RealImpl.cs" Visible="false" />
	</ItemGroup>

	<Target Name="ResourceHandlingMethods" BeforeTargets="BeforeBuild">
		<ItemGroup>
			<Compile Remove="Resources\UiResources.cs" Visible="false" />
			<Compile Include="Resources\UiResources.RealImpl.cs" Visible="false" />
		</ItemGroup>
	</Target>

	<ItemGroup>
		<Page Update="Pages\MainWindow\SettingsPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>
	<!--Loading end-->

	<ItemGroup>
		<Page Update="Pages\MainWindow\AboutPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<ItemGroup>
		<Page Update="Resources\Dic_1033.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<ItemGroup>
		<Page Update="Resources\Dic_2052.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<ItemGroup>
		<Page Update="Pages\MainWindow\SudokuPanelPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
		<Page Update="Themes\Generic.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>

	<ItemGroup>
		<Page Update="CustomControls\SudokuPanel.xaml">
			<Generator>MSBuild:Compile</Generator>
		</Page>
	</ItemGroup>
</Project>
