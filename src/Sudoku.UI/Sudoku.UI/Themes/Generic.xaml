<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:c="using:Sudoku.UI.CustomControls">

    <Style TargetType="c:SudokuPanel">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="c:SudokuPanel">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="c:CustomizedSettingsNavigationView">
        <Setter Property="Template">
            <Setter.Value>
				<ControlTemplate TargetType="c:CustomizedSettingsNavigationView">
                    <Border
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
