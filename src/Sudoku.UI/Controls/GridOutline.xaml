<GridLayout
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:layer="clr-namespace:Sudoku.UI.Layers"
	x:Class="Sudoku.UI.Controls.GridOutline"
	RowDefinitions="*" ColumnDefinitions="{OnIdiom Phone='*',Default='540,*'}">
	<GridLayout.Resources>
		<x:Double x:Key="DefaultSizeRequest">540</x:Double>
		<layer:GridOutlineLayer x:Key="GridOutlineLayer" Offset="10" />
	</GridLayout.Resources>

	<GraphicsView
		Drawable="{StaticResource GridOutlineLayer}"
		WidthRequest="{StaticResource DefaultSizeRequest}"
		HeightRequest="{StaticResource DefaultSizeRequest}" />
</GridLayout>
