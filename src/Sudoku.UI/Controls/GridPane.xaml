<GridLayout
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:g="clr-namespace:Sudoku.Graphics;assembly=Sudoku.Graphics"
	x:Class="Sudoku.UI.Controls.GridPane"
	RowDefinitions="*" ColumnDefinitions="{OnIdiom Phone='*',Default='540,*'}">

	<GraphicsView WidthRequest="540" HeightRequest="540">
		<GraphicsView.Drawable>
			<g:GridDrawable Offset="10" />
		</GraphicsView.Drawable>
	</GraphicsView>
</GridLayout>
