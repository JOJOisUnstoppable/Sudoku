<Window x:Class="Sudoku.UI.Windows.MessageDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:viewModels="clr-namespace:Sudoku.UI.ViewModels"
		mc:Ignorable="d" ResizeMode="CanMinimize" Title="{Binding Title}">
	<Window.DataContext>
		<viewModels:MessageDialogViewModel x:Name="ViewModel" />
	</Window.DataContext>

	<TextBlock x:Name="TextBlockInfo" Text="{Binding Text}" />
</Window>
