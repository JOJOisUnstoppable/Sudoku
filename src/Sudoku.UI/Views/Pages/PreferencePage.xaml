<Page
	x:Class="Sudoku.UI.Views.Pages.PreferencePage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:c="using:Sudoku.UI.Views.Controls"
	xmlns:ui="using:Sudoku.UI"
	xmlns:xui="using:Microsoft.UI.Xaml"
	mc:Ignorable="d" NavigationCacheMode="Required">

	<ScrollViewer>
		<StackPanel Margin="40,20,20,30" Spacing="4">
			<StackPanel.Transitions>
				<TransitionCollection>
					<EntranceThemeTransition IsStaggeringEnabled="True" />
				</TransitionCollection>
			</StackPanel.Transitions>

			<TextBlock Text="{StaticResource PreferencePage_DetailDescription}" Margin="0,0,0,24" />

			<!--Basic Options-->
			<TextBlock Text="{StaticResource SettingsPage_GroupItemName_Basic}" FontWeight="Light" FontSize="24" />
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_ShowCandidates}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.ShowCandidates,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_ShowCandidateBorderLines}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.ShowCandidateBorderLines,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_PeerFocusingMode}"
				Description="{StaticResource SettingsPage_ItemDescription_PeerFocusingMode}">
				<ComboBox SelectedIndex="{x:Bind ((ui:App)xui:Application.Current).UserPreference.PeerFocusingMode,Mode=TwoWay}">
					<ComboBoxItem Content="{StaticResource SettingsPage_ItemName_PeerFocusingModeOption0Content}" />
					<ComboBoxItem Content="{StaticResource SettingsPage_ItemName_PeerFocusingModeOption1Content}" />
					<ComboBoxItem Content="{StaticResource SettingsPage_ItemName_PeerFocusingModeOption2Content}" />
				</ComboBox>
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_FocusedCellColor}"
				Description="{StaticResource SettingsPage_ItemDescription_FocusedCellColor}">
				<c:ColorSelector
					Margin="0,0,70,0"
					SelectedColor="{x:Bind ((ui:App)xui:Application.Current).UserPreference.FocusedCellColor,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_PeersFocusedCellColor}"
				Description="{StaticResource SettingsPage_ItemDescription_PeersFocusedCellColor}">
				<c:ColorSelector
					Margin="0,0,70,0"
					SelectedColor="{x:Bind ((ui:App)xui:Application.Current).UserPreference.PeersFocusedCellColor,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_EnableDeltaValuesDisplaying}"
				Description="{StaticResource SettingsPage_ItemDescription_EnableDeltaValuesDisplaying}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.EnableDeltaValuesDisplaying,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_PlaceholderIsZero}"
				Description="{StaticResource SettingsPage_ItemDescription_PlaceholderIsZero}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.PlaceholderIsZero,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_ValueFont}"
				Description="{StaticResource SettingsPage_ItemDescription_ValueFont}">
				<c:Win11SettingControl.ExpandableContent>
					<c:FontPicker
						Margin="60,10,30,10"
						PlaceholderText="{StaticResource FontPickerPlaceholder}"
						SelectedFontName="{x:Bind ((ui:App)xui:Application.Current).UserPreference.ValueFont.FontName,Mode=TwoWay}"
						SelectedFontScale="{x:Bind ((ui:App)xui:Application.Current).UserPreference.ValueFont.FontScale,Mode=TwoWay}">
						<c:FontPicker.Header>
							<TextBlock Text="{StaticResource FontPickerFontName}" Margin="0,9,0,0" />
						</c:FontPicker.Header>
					</c:FontPicker>
				</c:Win11SettingControl.ExpandableContent>
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_CandidateFont}"
				Description="{StaticResource SettingsPage_ItemDescription_CandidateFont}">
				<c:Win11SettingControl.ExpandableContent>
					<c:FontPicker
						Margin="60,10,30,10"
						PlaceholderText="{StaticResource FontPickerPlaceholder}"
						SelectedFontName="{x:Bind ((ui:App)xui:Application.Current).UserPreference.CandidateFont.FontName,Mode=TwoWay}"
						SelectedFontScale="{x:Bind ((ui:App)xui:Application.Current).UserPreference.CandidateFont.FontScale,Mode=TwoWay}">
						<c:FontPicker.Header>
							<TextBlock Text="{StaticResource FontPickerFontName}" Margin="0,9,0,0" />
						</c:FontPicker.Header>
					</c:FontPicker>
				</c:Win11SettingControl.ExpandableContent>
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_AlsoSavePictureWhenSaveDrawingData}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.AlsoSavePictureWhenSaveDrawingData,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_AlwaysShowHomePageWhenOpen}"
				Description="{StaticResource SettingsPage_ItemDescription_AlwaysShowHomePageWhenOpen}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.AlwaysShowHomePageWhenOpen,Mode=TwoWay}" />
			</c:Win11SettingControl>

			<!--Solving Options-->
			<TextBlock Text="{StaticResource SettingsPage_GroupItemName_Solving}" FontWeight="Light" FontSize="24" Margin="0,24,0,0" />

			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_IsFullApplying}"
				Description="{StaticResource SettingsPage_ItemDescription_IsFullApplying}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.IsFullApplying,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_AllowCollisionOnChainingAlsTechniques}"
				Description="{StaticResource SettingsPage_ItemDescription_AllowCollisionOnChainingAlsTechniques}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.AllowCollisionOnChainingAlsTechniques,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_AllowDoublyLinkedAls}"
				Description="{StaticResource SettingsPage_ItemDescription_AllowDoublyLinkedAls}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.AllowDoublyLinkedAls,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_CheckAlmostLockedQuadruple}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.CheckAlmostLockedQuadruple,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_SearchBivalueUniversalGraveExtendedTypes}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.SearchBivalueUniversalGraveExtendedTypes,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_CheckAdvancedJuniorExocets}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.CheckAdvancedJuniorExocets,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_CheckAdvancedSeniorExocets}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.CheckAdvancedSeniorExocets,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_EnableFullHouse}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.EnableFullHouse,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_EnableLastDigit}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.EnableLastDigit,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_HiddenSinglesInBlockFirst}"
				Description="{StaticResource SettingsPage_ItemDescription_HiddenSinglesInBlockFirst}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.HiddenSinglesInBlockFirst,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_TemplateDeleteOnly}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.TemplateDeleteOnly,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl
				Title="{StaticResource SettingsPage_ItemName_AllowIncompleteUniqueRectangles}"
				Description="{StaticResource SettingsPage_ItemDescription_AllowIncompleteUniqueRectangles}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.AllowIncompleteUniqueRectangles,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_SearchForExtendedUniqueRectangles}">
				<ToggleSwitch
					OnContent="{StaticResource ToggleSwitchDefaultOnContent}"
					OffContent="{StaticResource ToggleSwitchDefaultOffContent}"
					IsOn="{x:Bind ((ui:App)xui:Application.Current).UserPreference.SearchForExtendedUniqueRectangles,Mode=TwoWay}" />
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_RegularWingMaxSize}">
				<ComboBox
					Margin="0,0,96,0"
					SelectedValue="{x:Bind ((ui:App)xui:Application.Current).UserPreference.RegularWingMaxSize,Mode=TwoWay}">
					<x:Int32>3</x:Int32>
					<x:Int32>4</x:Int32>
					<x:Int32>5</x:Int32>
					<x:Int32>6</x:Int32>
					<x:Int32>7</x:Int32>
					<x:Int32>8</x:Int32>
					<x:Int32>9</x:Int32>
				</ComboBox>
			</c:Win11SettingControl>
			<c:Win11SettingControl Title="{StaticResource SettingsPage_ItemName_ComplexFishMaxSize}">
				<ComboBox
					Margin="0,0,96,0"
					SelectedValue="{x:Bind ((ui:App)xui:Application.Current).UserPreference.ComplexFishMaxSize,Mode=TwoWay}">
					<x:Int32>2</x:Int32>
					<x:Int32>3</x:Int32>
					<x:Int32>4</x:Int32>
					<x:Int32>5</x:Int32>
					<x:Int32>6</x:Int32>
					<x:Int32>7</x:Int32>
				</ComboBox>
			</c:Win11SettingControl>
		</StackPanel>
	</ScrollViewer>
</Page>
