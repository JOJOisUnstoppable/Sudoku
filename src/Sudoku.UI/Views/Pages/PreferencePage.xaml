						<Slider.Header>
							<TextBlock
								Style="{ThemeResource CaptionTextBlockStyle}" Margin="0,9,0,0"
								Text="{x:Bind data:SimpleConverters.SliderPossibleValueString(0.0,3.0,0.1,0.3)}" />
						</Slider.Header>
