<Page
	x:Class="Sudoku.UI.Views.Pages.AboutPage"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:m="using:Sudoku.UI.Models"
	xmlns:c="using:Sudoku.UI.Converters"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:Sudoku.UI.ViewModels"
	d:DataContext="{d:DesignInstance Type=vm:AboutPageViewModel}"
	mc:Ignorable="d">
	<Page.DataContext>
		<vm:AboutPageViewModel />
	</Page.DataContext>
	<Page.Resources>
		<c:Path2BrushConverter x:Key="Path2BrushConverter" />
	</Page.Resources>

	<!--Window begin-->
	<StackPanel>
		<TextBlock Text="Here displays the details about the application." Style="{ThemeResource PlainText}" />
		<TextBlock Text="Author" Style="{ThemeResource Header2Text}" />
		<TextBlock Text="Sunnie-Shine" Style="{ThemeResource BoldText}" />
		<TextBlock Text="You can visit those links to learn more about me:" Style="{ThemeResource PlainText}" />
		<Grid HorizontalAlignment="Left" Margin="{StaticResource ParagraphOffset}">
			<Grid.RowDefinitions>
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
				<RowDefinition />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="DimGray" BorderThickness="0,1,0,0" />
			<Border Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="DimGray" BorderThickness="0,1,0,0" />
			<Border Grid.Row="2" Grid.ColumnSpan="2" BorderBrush="DimGray" BorderThickness="0,1,0,0" />
			<Border Grid.Row="3" Grid.ColumnSpan="2" BorderBrush="DimGray" BorderThickness="0,1,0,1" />
			<TextBlock Grid.Row="0" Grid.Column="0" Text="Platform" Style="{ThemeResource TableHeader}" />
			<TextBlock Grid.Row="0" Grid.Column="1" Text="Site" Style="{ThemeResource TableHeader}" />
			<TextBlock
				Grid.Row="1" Grid.Column="0" Text="GitHub" HorizontalAlignment="Center"
				Style="{ThemeResource TablePlainText}" />
			<HyperlinkButton
				Grid.Row="1" Grid.Column="1" Content="https://github.com/SunnieShine"
				Click="HyperlinkButton_Click" />
			<TextBlock
				Grid.Row="2" Grid.Column="0" Text="Gitee" HorizontalAlignment="Center"
				Style="{ThemeResource TablePlainText}" />
			<HyperlinkButton
				Grid.Row="2" Grid.Column="1" Content="https://gitee.com/SunnieShine"
				Click="HyperlinkButton_Click" />
			<TextBlock
				Grid.Row="3" Grid.Column="0" Text="Bilibili" HorizontalAlignment="Center"
				Style="{ThemeResource TablePlainText}" />
			<HyperlinkButton
				Grid.Row="3" Grid.Column="1" Content="https://space.bilibili.com/23736703"
				Click="HyperlinkButton_Click" />
		</Grid>
		<TextBlock Text="Special Thanks" Style="{ThemeResource Header2Text}" />
		<TextBlock
			Text="This project uses the following open-source code:"
			Style="{ThemeResource PlainText}" />
		<ListView Margin="{StaticResource ParagraphOffset}" SelectionMode="None">
			<ListView.ItemTemplate>
				<DataTemplate x:DataType="m:ImageInfo">
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition />
							<RowDefinition />
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition />
						</Grid.ColumnDefinitions>

						<Ellipse
							Grid.RowSpan="2" Width="32" Height="32" Margin="6"
							HorizontalAlignment="Center" VerticalAlignment="Center"
							Fill="{x:Bind Path,Converter={StaticResource Path2BrushConverter},Mode=OneWay}" />
						<TextBlock
							Grid.Row="0" Grid.Column="1" Margin="12,6,0,0"
							Text="{x:Bind Name}" Style="{StaticResource BaseTextBlockStyle}" />
						<TextBlock
							Grid.Row="1" Grid.Column="1" Margin="12,0,0,6"
							Text="{x:Bind Site}" Style="{StaticResource BodyTextBlockStyle}" />
					</Grid>
				</DataTemplate>
			</ListView.ItemTemplate>

			<!--<m:ImageInfo Name=".NET Runtime" Site="https://github.com/dotnet/runtime" Path="images/dotnet.png" />-->
			<m:ImageInfo Name=".NET Runtime" Site="https://github.com/dotnet/runtime" />
		</ListView>
	</StackPanel>
</Page>
