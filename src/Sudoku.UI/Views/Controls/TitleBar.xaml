<UserControl
	x:Class="Sudoku.UI.Views.Controls.TitleBar"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
	<Grid x:Name="_cAppTitleBar" Grid.Row="0" Height="64">
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="_cLeftPaddingColumn" Width="0" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition/>
			<ColumnDefinition x:Name="_cRightPaddingColumn" Width="0" />
		</Grid.ColumnDefinitions>
		<Image
			x:Name="_cTitleBarIcon" Grid.Column="1" HorizontalAlignment="Left" Width="44" Height="44"
			VerticalAlignment="Center" Source="/Assets/images/logo.png" Margin="12,0,0,0" />
		<TextBlock
			x:Name="_cTitleTextBlock" Grid.Column="2" Margin="12,0,0,0" FontSize="24"
			VerticalAlignment="Center" />
	</Grid>
</UserControl>
