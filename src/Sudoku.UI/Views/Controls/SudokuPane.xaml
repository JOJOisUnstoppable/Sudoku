<UserControl
	x:Class="Sudoku.UI.Views.Controls.SudokuPane"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:vm="using:Sudoku.UI.ViewModels"
	d:DataContext="{d:DesignInstance Type=vm:SudokuPaneViewModel}"
	mc:Ignorable="d"
	Loaded="SudokuPane_LoadedAsync" UseLayoutRounding="True">
	<UserControl.DataContext>
		<vm:SudokuPaneViewModel />
	</UserControl.DataContext>

	<Canvas x:Name="_cCanvasMain" />
</UserControl>
