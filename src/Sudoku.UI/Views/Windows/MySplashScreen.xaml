<xw:SplashScreen
	x:Class="Sudoku.UI.Views.Windows.MySplashScreen"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:ui="using:Sudoku.UI"
	xmlns:xw="using:WinUIEx"
	mc:Ignorable="d"
	Width="816" Height="504" IsAlwaysOnTop="True">
	<Grid>
		<Image Source="/Assets/images/splash-screen.png" />
		<TextBlock
			Text="{x:Bind ui:Program.ProgramName}" FontSize="36" FontWeight="SemiBold"
			HorizontalAlignment="Center" VerticalAlignment="Center" />
	</Grid>
</xw:SplashScreen>
