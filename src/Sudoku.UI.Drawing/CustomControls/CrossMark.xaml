<Grid
	x:Class="Sudoku.UI.Views.Controls.CrossMark"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
	<Viewbox Stretch="Uniform" Margin="{x:Bind Margin}">
		<Path
			x:Name="_cPath" Data="M2,2 L14,14 M2,14 L14,2" Width="16" Height="16"
			Stroke="{x:Bind Stroke}" StrokeThickness="{x:Bind StrokeThickness}" />
	</Viewbox>
</Grid>
