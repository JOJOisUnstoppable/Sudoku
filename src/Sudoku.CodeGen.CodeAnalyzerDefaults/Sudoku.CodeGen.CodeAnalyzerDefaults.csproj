<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<Authors>Sunnie</Authors>
		<Description>A source generator project that generates the code for code analyzer default value and code fix defaults.</Description>
		<Copyright>Copyright (c) Sunnie 2021</Copyright>
		<Version>0.1</Version>
		<LangVersion>9.0</LangVersion>
		<Nullable>enable</Nullable>
		<DocumentationFile>..\docxml\Sudoku.CodeGen.CodeAnalyzerDefaults.xml</DocumentationFile>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
	  <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
	  <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.Common" Version="3.10.0-2.final" />
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="3.10.0-2.final" />
	</ItemGroup>

</Project>
