<ContentPage
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:vm="clr-namespace:Sudoku.Maui.ViewModels"
	x:Class="Sudoku.Maui.Views.MainPage">
	<ContentPage.BindingContext>
		<vm:MainPageViewModel />
	</ContentPage.BindingContext>

	<ScrollView>
		<VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
			<Image Source="dotnet_bot.png" HeightRequest="200" HorizontalOptions="Center" />
			<Label Text="Hello, World!" FontSize="32" HorizontalOptions="Center" />
			<Label Text="Welcome to .NET Multi-platform App UI" FontSize="18" HorizontalOptions="Center" />
			<Button Text="{x:Binding ButtonText,Mode=TwoWay}" Command="{x:Binding ButtonCommand}" IsEnabled="True" HorizontalOptions="Center" />
		</VerticalStackLayout>
	</ScrollView>
</ContentPage>
