<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<RootNamespace>Sudoku</RootNamespace>
		<Description>Provides all core implementations of sudokus, such as a grid.</Description>
		<DocumentationFile>..\docxml\Sudoku.Core.xml</DocumentationFile>
	</PropertyGroup>

	<ItemGroup>
		<None Include="$(SolutionDir)Resources\lang\**" CopyToOutputDirectory="PreserveNewest" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Resources\lang\lang-zh-CN.json" />
	</ItemGroup>

	<ItemGroup>
	  <Compile Include="Resources\lang\lang-zh-CN.json" />
	</ItemGroup>

	<ItemGroup>
		<ProjectReference Include="..\System\SystemExtensions.csproj" />
		<ProjectReference Include="..\Sudoku.Core.CodeGen\Sudoku.Core.CodeGen.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" />
		<ProjectReference Include="..\Sudoku.Diagnostics.CodeGen\Sudoku.Diagnostics.CodeGen.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="true" />
	</ItemGroup>

</Project>
