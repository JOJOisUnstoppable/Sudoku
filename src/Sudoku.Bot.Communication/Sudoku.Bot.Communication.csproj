<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<GenerateDocumentationFile>True</GenerateDocumentationFile>
		<DocumentationFile>..\docxml\Sudoku.Bot.Communication.xml</DocumentationFile>
		<Description>The project that makes commnication with QQ bot server.</Description>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\System\SystemExtensions.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Resources\ResourceDictionary.Designer.cs">
			<DesignTime>True</DesignTime>
			<AutoGen>True</AutoGen>
			<DependentUpon>ResourceDictionary.resx</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<EmbeddedResource Update="Resources\ResourceDictionary.resx">
			<Generator>ResXFileCodeGenerator</Generator>
			<LastGenOutput>ResourceDictionary.Designer.cs</LastGenOutput>
		</EmbeddedResource>
	</ItemGroup>

</Project>
