<UserControl x:Class="Sudoku.Windows.Tooling.TechniqueBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 mc:Ignorable="d" MinWidth="520">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" MinWidth="20" MaxWidth="20"/>
            <ColumnDefinition Width="200" MinWidth="100"/>
            <ColumnDefinition Width="300" MinWidth="100"/>
        </Grid.ColumnDefinitions>
        <CheckBox Grid.Column="0" Click="CheckBox_Click"/>
        <TextBlock Grid.Column="1" Name="_textBlockName" Text="{Binding Content,Mode=TwoWay}"
				   HorizontalAlignment="Stretch"/>
        <TextBlock Grid.Column="2" Name="_textBlockNamespace" Text="{Binding Comment,Mode=TwoWay}"
				   HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
