<Window x:Class="Sudoku.Windows.BatchWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="{DynamicResource BatchWindowTitle}" Height="800" Width="800">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="19*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<TextBox Name="_textBoxBatch" Margin="10 10 10 10" IsReadOnly="False"
				 AcceptsReturn="True" FontFamily="'Cascadia Code', 'Fira Code',Consolas,'Microsoft YaHei UI'"
				 FontSize="16"/>
		<Button Name="_buttonBatch" Content="{DynamicResource BatchWindowButtonBatch}"
				Grid.Row="1" Margin="0 0 10 0" HorizontalAlignment="Right" VerticalAlignment="Center"
				Click="ButtonBatch_Click"/>
	</Grid>
</Window>
