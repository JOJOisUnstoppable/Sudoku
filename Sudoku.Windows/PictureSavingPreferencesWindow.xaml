<Window x:Class="Sudoku.Windows.PictureSavingPreferencesWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="{DynamicResource PictureSavingTitle}" Height="180" Width="250" ResizeMode="CanMinimize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="4*"/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>
		<Label Content="{DynamicResource PictureSavingLabelSize}"
			   HorizontalAlignment="Right" VerticalAlignment="Center"
			   Grid.Row="0" Grid.Column="0"/>
		<TextBox Name="_textBoxSize" Grid.Row="0" Grid.Column="1"
				 HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="1" Grid.ColumnSpan="2">
			<StackPanel.Resources>
				<Style TargetType="Button">
					<Setter Property="Margin" Value="5,5,5,5"/>
				</Style>
			</StackPanel.Resources>
			<Button Name="_buttonSave" Content="{DynamicResource PictureSavingButtonSave}"
					Click="ButtonSave_Click"/>
			<Button Name="_buttonCancel" Content="{DynamicResource PictureSavingButtonCancel}"
					Click="ButtonCancel_Click"/>
		</StackPanel>
	</Grid>
</Window>
