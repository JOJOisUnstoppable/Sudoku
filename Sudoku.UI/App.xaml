             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:system="clr-namespace:System;assembly=System.Runtime"
			 StartupUri="MainWindow.xaml">
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="ResourceDictionaries/DictionaryEnUs.xaml" />
				<ResourceDictionary Source="ResourceDictionaries/DictionaryZhCn.xaml" />
			</ResourceDictionary.MergedDictionaries>

			<system:Double x:Key="DefaultSudokuGridRenderingSize">600</system:Double>
		</ResourceDictionary>
    </Application.Resources>
</Application>
