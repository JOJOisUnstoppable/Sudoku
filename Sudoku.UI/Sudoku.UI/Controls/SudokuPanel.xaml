<UserControl
	x:Class="Sudoku.UI.Controls.SudokuPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" Width="600" Height="600"
	Loaded="SudokuPanel_LoadedAsync">
	<UserControl.Resources>
		<x:Double x:Key="Offset">10</x:Double>
		<x:Double x:Key="DefaultWidth">600</x:Double>
		<x:Double x:Key="DefaultHeight">600</x:Double>
	</UserControl.Resources>

	<Image x:Name="ImageGrid" Width="{StaticResource DefaultWidth}" Height="{StaticResource DefaultHeight}" />
</UserControl>
