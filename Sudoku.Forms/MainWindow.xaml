<Window x:Class="Sudoku.Forms.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" Height="800" Width="1200" ResizeMode="CanMinimize">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="600"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		<Menu VerticalAlignment="Top" IsMainMenu="True" Name="_mainMenu"
			  Grid.Row="0" Grid.ColumnSpan="2">
			<MenuItem Header="File">
				<MenuItem Header="Open puzzle..." InputGestureText="Ctrl + O"
						  Click="MenuItemFileOpen_Click"/>
				<MenuItem Header="Save puzzle..." InputGestureText="Ctrl + S"
						  Click="MenuItemFileSave_Click"/>
				<Separator/>
				<MenuItem Header="Get Snapshot" Click="MenuItemFileGetSnapshot_Click"/>
				<Separator/>
				<MenuItem Header="Quit app" InputGestureText="Alt + F4"
						  Click="MenuItemFileQuit_Click"/>
			</MenuItem>
			<MenuItem Header="Options">
				<MenuItem Header="Show candidates" Name="_menuItemOptionsShowCandidates"
						  IsChecked="True"
						  Click="MenuItemOptionsShowCandidates_Click"/>
				<Separator/>
				<MenuItem Header="Settings..."
						  Click="MenuItemOptionsSettings_Click"/>
			</MenuItem>
			<MenuItem Header="Edit">
				<MenuItem Header="Undo" InputGestureText="Ctrl + Z" Name="_menuItemUndo" IsEnabled="False"
						  Click="MenuItemEditUndo_Click"/>
				<MenuItem Header="Redo" InputGestureText="Ctrl + Y" Name="_menuItemRedo" IsEnabled="False"
						  Click="MenuItemEditRedo_Click"/>
				<Separator/>
				<MenuItem Header="Copy normal grid" InputGestureText="Ctrl + C"
						  Click="MenuItemEditCopy_Click"/>
				<MenuItem Header="Copy current grid" InputGestureText="Ctrl + Shift + C"
						  Click="MenuItemEditCopyCurrentGrid_Click"/>
				<MenuItem Header="Copy hodoku library format"
						  Click="MenuItemEditCopyHodokuLibrary_Click"/>
				<MenuItem Header="Copy PM grid"
						  Click="MenuItemEditCopyPmGrid_Click"/>
				<MenuItem Header="Paste" InputGestureText="Ctrl + V"
						  Click="MenuItemEditPaste_Click"/>
				<Separator/>
				<MenuItem Header="Fix grid" InputGestureText="Ctrl + `"
						  Click="MenuItemEditFix_Click"/>
				<MenuItem Header="Unfix grid" InputGestureText="Ctrl + Shift + `"
						  Click="MenuItemEditUnfix_Click"/>
				<Separator/>
				<MenuItem Header="Reset grid"
						  Click="MenuItemEditReset_Click"/>
			</MenuItem>
			<MenuItem Header="Generate">
				<MenuItem Header="Hard pattern mode" Name="_menuItemGenerateHardPattern"
						  Click="MenuItemGenerateHardPattern_Click"/>
			</MenuItem>
			<MenuItem Header="Mode">
				<MenuItem Header="Solve" Name="_menuItemModeSolve" InputGestureText="F9"
						  Click="MenuItemModeSolve_Click"/>
				<Separator/>
				<MenuItem Header="Sudoku Explainer Compatible" Name="_menuItemModeSeMode"
						  Click="MenuItemModeSeMode_Click"/>
				<Separator/>
				<MenuItem Header="FastSearch" Name="_menuItemModeFastSearch"
						  Click="MenuItemModeFastSearch_Click"/>
			</MenuItem>
			<MenuItem Header="About">
				<MenuItem Header="Me" Click="MenuItemAboutMe_Click"/>
			</MenuItem>
		</Menu>
		<Image HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
			   Name="_imageGrid" Grid.Row="1" Grid.Column="0" Width="576" Height="576"
			   MouseLeftButtonDown="ImageGrid_MouseLeftButtonDown"
			   MouseRightButtonDown="ImageGrid_MouseRightButtonDown"/>
		<TabControl Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch"
					VerticalAlignment="Stretch">
			<TabItem Header="Summary">
				<Grid Background="#FFE5E5E5" Name="_gridSummary">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="2*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
				</Grid>
			</TabItem>
			<TabItem Header="Solution path">
				<Grid Background="#FFE5E5E5">
					<ListBox Name="_listBoxPaths"/>
				</Grid>
			</TabItem>
			<TabItem Header="All possible steps">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
			<TabItem Header="Drawing">
				<Grid Background="#FFE5E5E5"/>
			</TabItem>
		</TabControl>
		<TextBox Grid.Row="2" Grid.ColumnSpan="2" IsReadOnly="True" Name="_textBoxInfo"/>
	</Grid>
</Window>
